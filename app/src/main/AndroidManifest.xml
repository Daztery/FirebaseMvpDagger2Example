<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.upc.monitoringwalkers">

    <application
        android:name=".MonitoringWalkersApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeDoctorPatient"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".ui.doctor.detailTherapist.DetailTherapistActivity"></activity>

        <activity android:name=".ui.therapists.profile.detailPatient.DetailPatientActivity"></activity>

        <activity
            android:name=".ui.doctor.listPatientsWithoutTherapist.ListPatientsWithoutTherapistActivity"
            android:label="@string/title_activity_list_patients"
            android:theme="@style/AppThemeDoctorPatient.NoActionBar" />

        <activity
            android:name=".ui.doctor.listPatientsByTherapist.ListPatientsByTherapistActivity"
            android:label="@string/title_activity_list_patients"
            android:theme="@style/AppThemeDoctorPatient.NoActionBar" />

        <activity
            android:name=".ui.doctor.listPatients.ListPatientsActivity"
            android:label="@string/title_activity_list_patients"
            android:theme="@style/AppThemeDoctorPatient.NoActionBar" />

        <activity android:name=".ui.therapists.profile.listPatients.TherapistProfileActivity"
            android:theme="@style/AppThemeDoctorPatient.NoActionBar"/>
        <activity
            android:name=".ui.doctor.choosePatientOrTherapist.ChoosePatientOrTherapistActivity"
            android:theme="@style/AppThemeDoctorPatient.NoActionBar" />
        <activity
            android:name=".ui.resetPassword.ResetPasswordActivity"
            android:parentActivityName=".ui.login.LoginActivity" />
        <activity
            android:name=".ui.admin.detailDoctor.DetailDoctorActivity"
            android:parentActivityName=".ui.admin.listDoctors.ListDoctorsActivity" />
        <activity
            android:name=".ui.doctor.listTherapists.ListTherapistsActivity"
            android:label="@string/title_activity_list_therapists"
            android:theme="@style/AppThemeDoctorPatient.NoActionBar" />
        <activity android:name=".ui.patients.profile.PatientProfileActivity"
            android:theme="@style/AppThemeDoctorPatient.NoActionBar"/>
        <activity
            android:name=".ui.admin.listDoctors.ListDoctorsActivity"
            android:label="@string/title_activity_list_doctors"
            android:theme="@style/AppThemeDoctorPatient.NoActionBar" />
        <activity
            android:name=".ui.admin.addDoctor.AddDoctorActivity"
            android:parentActivityName=".ui.admin.listDoctors.ListDoctorsActivity" />
        <activity
            android:name=".ui.doctor.addPacient.AddPatientActivity"
            android:parentActivityName=".ui.doctor.addPacient.AddPatientActivity" />
        <activity
            android:name=".ui.doctor.addTherapist.AddTherapistActivity"
            android:parentActivityName=".ui.doctor.listTherapists.ListTherapistsActivity" />
        <activity android:name=".ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.login.LoginActivity" />
    </application>

</manifest>